---
import PageLayout from "@/layouts/Base.astro";

const meta = {
	description: "To see a World in a Grain of Sand…",
	title: "About",
};
---

<PageLayout meta={meta}>
    <h1 class="title mb-12">About</h1>
    <figure class="mx-auto my-16 max-w-2xl text-center">
        <blockquote class="font-serif text-2xl leading-relaxed tracking-wide italic text-accent-2">
            <p>
                To see a World in a Grain of Sand<br />
                And a Heaven in a Wild Flower,<br />
                Hold Infinity in the palm of your hand<br />
                And Eternity in an hour.
            </p>
        </blockquote>
        <figcaption class="mt-4 text-sm text-gray-500 dark:text-gray-400">
            — William Blake, “Auguries of Innocence”
        </figcaption>
    </figure>
</PageLayout>
